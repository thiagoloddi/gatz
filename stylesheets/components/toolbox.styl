.tool-box
    z-index 2
    display inline-block
    position relative
    vertical-align top
    width 100px
    height 100%
    padding 10px
    background-color #d8d8d8
    box-shadow 1px 1px 17px -2px rgba(0, 0, 0, .25)

    .gate-container
        position relative
        width 80px
        height 80px
        background-color white
        margin-bottom 10px

        &.-selected
            background-color cyan 

        .gate
            position absolute
            top 0
            bottom 0
            left 0
            right 0
            margin auto