.canvas-viewport
    position relative
    display inline-block
    width calc(100% - 100px)
    height 100%
    overflow auto
    .canvas-container
        padding 20px
        box-sizing content-box
        width 1000px
        height 1000px
        .drawing-area
            position relative
            width 100%
            height 100%
            border 1px solid #d6d6d6
            box-sizing content-box